<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background"
    tools:context="com.example.a219.myapplication.info_Activity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:background="@drawable/no_img"
            android:id="@+id/info_img"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            />
    </LinearLayout>
    <View
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="#000000" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_gravity="center"
                android:id="@+id/info_title"
                android:textSize="25dp"
                android:text="Loding..."
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"/>
            <TextView
                android:layout_gravity="center"
                android:id="@+id/info_etitle"
                android:layout_margin="3dp"
                android:textSize="12dp"
                android:text="Loding..."
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="3dip"
                android:background="#000000" />
            <TextView
                android:id="@+id/info_ptitle"
                android:layout_margin="7dp"
                android:textSize="20dp"
                android:text="Loding..."
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/info_dtitle"
                android:layout_margin="7dp"
                android:textSize="20dp"
                android:text="Loding..."
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/info_atitle"
                android:layout_margin="7dp"
                android:textSize="20dp"
                android:text="Loding..."
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/info_rtitle"
                android:layout_margin="7dp"
                android:textSize="20dp"
                android:text="평가된 점수가 없습니다"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

<LinearLayout
    android:orientation="horizontal"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <Button
                android:layout_gravity="right"
                android:id="@+id/info_push_btn"
                android:text="푸시 알람 등록"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_gravity="right"
                android:id="@+id/info_myRegister_input"
                android:text="즐겨찾기등록"
                android:textSize="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
</LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
